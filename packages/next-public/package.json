{
  "name": "next-public",
  "version": "0.4.0",
  "description": "A webpack plugin to compile TypeScript files in the public folder of a Next.js project.",
  "license": "MIT",
  "bugs": "https://github.com/Yovach/next-public-ts/issues",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "devDependencies": {
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yovach/next-public-ts.git",
    "directory": "packages/next-public"
  },
  "keywords": [
    "next",
    "webpack",
    "public"
  ],
  "peerDependencies": {
    "@swc/core": "^1.3.95",
    "glob": "^7.1.6",
    "next": "*"
  },
  "peerDependenciesMeta": {
    "glob": {
      "optional": true
    },
    "next": {
      "optional": true
    },
    "@swc/core": {
      "optional": true
    }
  },
  "dependencies": {
    "@types/glob": "^8.1.0"
  }
}
